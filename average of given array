#include <stdio.h>
int main()
{
    int i,n,arr[50],sum=0,avg;
    printf("Enter the size of the array: ");
    scanf("%d",&n);
    printf("Enter the %d array elements in the array: ",n);
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    for(i=0;i<n;i++){
        sum+=arr[i];
    }
    avg=sum/n;
    printf("Average of the given array elements are: %d",avg);
}
